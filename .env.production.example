# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
ENV=production
GIN_MODE=release

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=geoffray_user
DB_PASSWORD=your_secure_password_here
DB_NAME=geoffray_production

# JWT Configuration
JWT_SECRET=your_very_long_random_jwt_secret_key_here
JWT_EXPIRATION=24h

# Mistral AI Configuration (Optional)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_URL=https://api.mistral.ai/
MISTRAL_AGENT_ID=your_mistral_agent_id_here

# Amadeus API Configuration (Optional)
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here

# Payment Configuration - Stripe (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Frontend Configuration
FRONTEND_API_URL=https://yourdomain.com/api

# Domain Configuration (for SSL)
DOMAIN=yourdomain.com
EMAIL=admin@yourdomain.com

# Optional: Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Optional: Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# Optional: Storage (S3 compatible)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=geoffray-uploads
S3_REGION=us-east-1